import React, { useState, useEffect } from 'react';
import { useAuth } from '../contexts/AuthContext';
import { db } from '../firebase/config';
import { collection, addDoc, query, where, orderBy, getDocs, doc, getDoc } from 'firebase/firestore';
import { format } from 'date-fns';
import axios from 'axios';
import HistoryTable from '../components/HistoryTable';

function Dashboard() {
  const { currentUser, logout, connectionStatus } = useAuth();
  const [lastPunch, setLastPunch] = useState(null);
  const [punches, setPunches] = useState([]);
  const [dailySummary, setDailySummary] = useState(null);
  const [userSchedule, setUserSchedule] = useState({ start: '09:00', end: '18:00' });
  const [loading, setLoading] = useState(false);
  const [isPunching, setIsPunching] = useState(false);
  const [activeTab, setActiveTab] = useState('today');

  useEffect(() => {
    if (currentUser) {
      fetchUserSchedule();
      fetchTodayPunches();
      fetchDailySummary();
    }
  }, [currentUser]);

  const fetchUserSchedule = async () => {
    const userDoc = await getDoc(doc(db, 'users', currentUser.uid));
    if (userDoc.exists()) {
      setUserSchedule(userDoc.data().schedule || { start: '09:00', end: '18:00' });
    }
  };

  const fetchTodayPunches = async () => {
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    const tomorrow = new Date(today);
    tomorrow.setDate(tomorrow.getDate() + 1);
    
    const q = query(
      collection(db, 'attendance'),
      where('userId', '==', currentUser.uid),
      where('timestamp', '>=', today),
      where('timestamp', '<', tomorrow),
      orderBy('timestamp', 'desc')
    );
    
    const querySnapshot = await getDocs(q);
    const punchesData = [];
    querySnapshot.forEach((doc) => {
      punchesData.push({ id: doc.id, ...doc.data() });
    });
    
    setPunches(punchesData);
    
    // Check if last punch was "in" or "out"
    if (punchesData.length > 0) {
      setLastPunch(punchesData[0].type);
    }
  };

  const fetchDailySummary = async () => {
    const today = format(new Date(), 'yyyy-MM-dd');
    
    try {
      const response = await axios.get(`http://localhost:5000/api/daily-summaries/${currentUser.uid}`, {
        params: {
          startDate: today,
          endDate: today
        }
      });
      if (response.data.length > 0) {
        setDailySummary(response.data[0]);
      }
    } catch (error) {
      console.error('Error fetching daily summary:', error);
    }
  };

  const handlePunch = async (type) => {
    setIsPunching(true);
    setLoading(true);
    try {
      const punchData = {
        userId: currentUser.uid,
        type,
        timestamp: new Date(),
        date: format(new Date(), 'yyyy-MM-dd')
      };

      // Optimistically update UI
      setPunches(prev => [{ id: 'temp-' + Date.now(), ...punchData }, ...prev]);

      // Actually save to Firebase
      await addDoc(collection(db, 'attendance'), punchData);

      // Trigger calculation in background (non-blocking)
      axios.post('http://localhost:5000/api/calculate-daily-summary', {
        userId: currentUser.uid,
        date: format(new Date(), 'yyyy-MM-dd')
      }).catch(err => console.error('Calculation error:', err));

      // Refresh data
      await fetchTodayPunches();
      await fetchDailySummary();
    } catch (error) {
      console.error('Error punching:', error);
    } finally {
      setIsPunching(false);
      setLoading(false);
    }
  };

  const formatTime = (timestamp) => {
    if (!timestamp) return '';
    const date = timestamp.toDate ? timestamp.toDate() : new Date(timestamp);
    return format(date, 'hh:mm:ss a');
  };

  return (
    <div className="min-h-screen bg-gray-100">
      <nav className="bg-white shadow-lg">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between h-16">
            <div className="flex items-center">
              <h1 className="text-xl font-semibold">Mini HCM System</h1>
            </div>
            <div className="flex items-center space-x-4">
              <span className="text-gray-700">Welcome, {currentUser?.email}</span>
              <button
                onClick={logout}
                className="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
              >
                Logout
              </button>
            </div>
          </div>
        </div>
      </nav>

      <div className="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        {/* Tabs */}
        <div className="mb-6">
          <div className="border-b border-gray-200">
            <nav className="-mb-px flex space-x-8">
              <button
                onClick={() => setActiveTab('today')}
                className={`${
                  activeTab === 'today'
                    ? 'border-indigo-500 text-indigo-600'
                    : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
                } whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm`}
              >
                Today's Dashboard
              </button>
              <button
                onClick={() => setActiveTab('history')}
                className={`${
                  activeTab === 'history'
                    ? 'border-indigo-500 text-indigo-600'
                    : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
                } whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm`}
              >
                History & Reports
              </button>
            </nav>
          </div>
        </div>

        {activeTab === 'today' ? (
          <>
            {/* Schedule Info */}
            <div className="bg-white overflow-hidden shadow-xl sm:rounded-lg p-6 mb-6">
              <h2 className="text-lg font-semibold mb-4">Your Schedule</h2>
              <p className="text-gray-600">
                Shift: {userSchedule.start} - {userSchedule.end}
              </p>
            </div>

            {/* Punch Buttons */}
            <div className="bg-white overflow-hidden shadow-xl sm:rounded-lg p-6 mb-6">
              <h2 className="text-lg font-semibold mb-4">Time Recording</h2>
              <div className="flex space-x-4">
                <button
                  onClick={() => handlePunch('in')}
                  disabled={loading || lastPunch === 'in'}
                  className={`flex-1 py-3 px-4 rounded-md text-white font-medium ${
                    lastPunch === 'in' 
                      ? 'bg-gray-400 cursor-not-allowed' 
                      : 'bg-green-600 hover:bg-green-700'
                  }`}
                >
                  Time In
                </button>
                <button
                  onClick={() => handlePunch('out')}
                  disabled={loading || lastPunch !== 'in'}
                  className={`flex-1 py-3 px-4 rounded-md text-white font-medium ${
                    lastPunch !== 'in' 
                      ? 'bg-gray-400 cursor-not-allowed' 
                      : 'bg-red-600 hover:bg-red-700'
                  }`}
                >
                  Time Out
                </button>
              </div>
            </div>

            {/* Daily Summary KPIs */}
            {dailySummary && (
              <div className="bg-white overflow-hidden shadow-xl sm:rounded-lg p-6 mb-6">
                <h2 className="text-lg font-semibold mb-4">Today's Summary</h2>
                <div className="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-4">
                  <div className="bg-blue-100 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Regular Hours</p>
                    <p className="text-2xl font-bold">{dailySummary.regularHours || 0}</p>
                  </div>
                  <div className="bg-green-100 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Overtime</p>
                    <p className="text-2xl font-bold">{dailySummary.overtime || 0}</p>
                  </div>
                  <div className="bg-purple-100 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Night Diff</p>
                    <p className="text-2xl font-bold">{dailySummary.nightDiff || 0}</p>
                  </div>
                  <div className="bg-yellow-100 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Late (min)</p>
                    <p className="text-2xl font-bold">{dailySummary.lateMinutes || 0}</p>
                  </div>
                  <div className="bg-orange-100 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Undertime (min)</p>
                    <p className="text-2xl font-bold">{dailySummary.undertimeMinutes || 0}</p>
                  </div>
                  <div className="bg-gray-100 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Total Hours</p>
                    <p className="text-2xl font-bold">{dailySummary.totalHours || 0}</p>
                  </div>
                </div>
              </div>
            )}

            {/* Today's Punches */}
            <div className="bg-white overflow-hidden shadow-xl sm:rounded-lg p-6">
              <h2 className="text-lg font-semibold mb-4">Today's Punches</h2>
              <div className="overflow-x-auto">
                <table className="min-w-full divide-y divide-gray-200">
                  <thead className="bg-gray-50">
                    <tr>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Type
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Time
                      </th>
                    </tr>
                  </thead>
                  <tbody className="bg-white divide-y divide-gray-200">
                    {punches.map((punch) => (
                      <tr key={punch.id}>
                        <td className="px-6 py-4 whitespace-nowrap">
                          <span className={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${
                            punch.type === 'in' 
                              ? 'bg-green-100 text-green-800' 
                              : 'bg-red-100 text-red-800'
                          }`}>
                            {punch.type === 'in' ? 'Time In' : 'Time Out'}
                          </span>
                        </td>
                        <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          {formatTime(punch.timestamp)}
                        </td>
                      </tr>
                    ))}
                    {punches.length === 0 && (
                      <tr>
                        <td colSpan="2" className="px-6 py-4 text-center text-gray-500">
                          No punches recorded today
                        </td>
                      </tr>
                    )}
                  </tbody>
                </table>
              </div>
            </div>

            {connectionStatus === 'offline' && (
              <div className="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4" role="alert">
                <p className="font-bold">Offline Mode</p>
                <p>You're working offline. Changes will sync when connection is restored.</p>
              </div>
            )}
          </>
        ) : (
          <HistoryTable userId={currentUser.uid} />
        )}      </div>
    </div>
  );
}

export default Dashboard;